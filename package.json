{
	"name": "fir-na-misneach",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"start:server": "nodemon server/index.js",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "jest --coverage",
		"test:watch": "jest  --watchAll --coverage",
		"test:updateSnapshot": "jest --updateSnapshot",
		"test:server": "jest --config jest.node.config.js --coverage",
		"test:server:watch": "jest --config jest.node.config.js --watch",
		"test:all": "concurrently \"npm run test\" \"npm run test:server\"",
		"start:dev": "concurrently \"npm run start:server\" \"npm start\"",
		"coverage:clean": "rm -rf .nyc_output coverage",
		"coverage:test": "concurrently \"jest --coverage --coverageDirectory=coverage/jest --coverageReporters=json --coverageReporters=lcov --coverageReporters=text\" \"cypress run --e2e --config video=false --config coverage=true\"",
		"coverage:merge": "mkdir -p .nyc_output && istanbul-merge --out .nyc_output/out.json coverage/jest/coverage-final.json coverage/cypress/coverage-final.json",
		"coverage:report": "nyc report --reporter=lcov --reporter=text-summary --reporter=html",
		"coverage": "npm run coverage:clean && npm run coverage:test && npm run coverage:merge && npm run coverage:report"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^19.2.1",
		"@angular/common": "^19.2.1",
		"@angular/compiler": "^19.2.1",
		"@angular/core": "^19.2.1",
		"@angular/forms": "^19.2.1",
		"@angular/platform-browser": "^19.2.1",
		"@angular/platform-browser-dynamic": "^19.2.1",
		"@angular/router": "^19.2.1",
		"bootstrap": "^5.3.3",
		"concurrently": "^9.0.1",
		"cors": "^2.8.5",
		"morgan": "^1.10.0",
		"rxjs": "~7.8.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.3.0",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@angular-eslint/eslint-plugin": "^19.3.0",
		"@angular-eslint/eslint-plugin-template": "^19.3.0",
		"@angular-eslint/template-parser": "^19.3.0",
		"@angular/build": "^19.2.1",
		"@angular/cli": "^19.2.1",
		"@angular/compiler-cli": "^19.2.1",
		"@cypress/code-coverage": "^3.13.12",
		"@eslint/js": "^9.23.0",
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/jest": "^29.5.12",
		"@typescript-eslint/eslint-plugin": "^8.27.0",
		"@typescript-eslint/parser": "^8.27.0",
		"cypress": "^13.13.0",
		"eslint": "^9.23.0",
		"husky": "^9.1.7",
		"istanbul-lib-coverage": "^3.2.2",
		"istanbul-merge": "^2.0.0",
		"jest": "^29.7.0",
		"jest-preset-angular": "^14.5.3",
		"nodemon": "^3.1.7",
		"nyc": "^17.1.0",
		"supertest": "^7.0.0",
		"typescript": "~5.8.2"
	}
}
